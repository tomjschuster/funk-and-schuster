<ul>

  <li>
    <strong>Title:</strong>
    <%= link @work.title,  to: artist_work_path(@conn, :show, @artist, @work)  %>
  </li>

  <li>
    <strong>Medium:</strong>
    <%= @work.medium %>
  </li>

  <li>
    <strong>Dimensions:</strong>
    <%= @work.dimensions %>
  </li>

  <li>
    <strong>Date:</strong>
    <%= @work.date %>
  </li>


  <% media = List.first(@work.media) %>

  <%= if media do %>
    <li>
      <%= link to: media_path(@conn, :show, media) do %>
        <%= img_tag("/media/#{media.filename}", style: "width: 100px; height: 100px") %>
      <% end %>
    </li>
  <% end %>

</ul>

